<style>
  .Section{{ section.id }}{
    background-color: {{ section.settings.background-color }};
    position: relative;
  }

  .Section{{ section.id }} .SectionHeader__Heading {
    font-size: {{section.settings.heading_size}}px !important;
  }

  {% if section.settings.margin_heading %}
    .Section{{ section.id }} .SectionHeader__Heading {
      margin-block-start: 0em;
      margin-block-end: 0em;
    }
  {% endif %}

  @media screen and (max-width: 641px) {
    .Section{{ section.id }} .SectionHeader__Heading {
      font-size: {{section.settings.heading_size_mobile}}px !important;
    }
 }

  {%- if section.settings.background_img == 'icons-cream.svg' or 'icons-green.svg' -%}
  .Section{{ section.id }}:before{
    content: ' ';
    display: block;
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
      background-image: url('{{ section.settings.background_img| asset_url }}');
      background-posistion: top;
      background-size: cover;
      opacity: 0.5;
  }

  {%- endif -%}

  .Section{{ section.id }} header, Section{{ section.id }} .Container {
    position: relative;
  }

  .Section{{ section.id }} .Container p {
    font-size: 18px;
  }

  .Section{{ section.id }} .Container strong {
    font-size: 14px;
  }
</style>

{% schema %}
{
  "name": "Featured collections",
  "class": "shopify-section--bordered",
  "max_blocks": 2,
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Sub-heading",
      "default": "Featured collection"
    },
    {
      "type": "range",
      "id": "heading_size",
      "label": "Heading size",
      "min":  15,
      "max":  100,
      "default": 26
    },
    {
      "type": "checkbox",
      "id": "margin_heading",
      "label": "Remove margin Heading",
      "default": false
    },
    {
      "type": "range",
      "id": "heading_size_mobile",
      "label": "Heading size mobile",
      "min":  8,
      "max":  60,
      "default": 15
    },
    {
      "type": "color",
      "id": "background-color",
      "label": "Background color",
      "default": "#fafafa"
    },
    {
      "type": "select",
      "id": "background_img",
      "label": "Use icons background - choose color",
      "options": [
        {
          "value": "icons-cream.svg",
          "label": "Cream"
        },
        {
          "value": "icons-green.svg",
          "label": "Green"
        },
        {
          "value": "none",
          "label": "No background image"
        }
      ],
      "default": "none"
    },
    {
      "type": "select",
      "id": "layout_mode",
      "label": "Layout",
      "options": [
        {
          "value": "grid",
          "label": "Grid"
        },
        {
          "value": "carousel",
          "label": "Carousel"
        }
      ],
      "default": "grid"
    },
    {
      "type": "checkbox",
      "id": "show_product_info",
      "label": "Show product info",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_vendor",
      "label": "Show vendor",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "show_color_swatch",
      "label": "Show color swatch",
      "info": "Some colors appear white? [Learn more](http://support.maestrooo.com/article/80-product-uploading-custom-color-for-color-swatch).",
      "default": false
    },
    {
      "type": "header",
      "content": "Grid",
      "info": "Those settings apply only if the layout mode is set to grid."
    },
    {
      "type": "select",
      "id": "grid_mobile_items_per_row",
      "label": "Products per row (mobile)",
      "options": [
        {
          "value": "1",
          "label": "1"
        },
        {
          "value": "2",
          "label": "2"
        }
      ],
      "default": "2"
    },
    {
      "type": "range",
      "min": 2,
      "max": 4,
      "id": "grid_desktop_items_per_row",
      "label": "Products per row (desktop)",
      "default": 4
    },
    {
      "type": "checkbox",
      "id": "show_product-days",
      "label": "Show black or cyber days badge on collection",
      "default": false
      }, 
      {
      "type": "select",
      "id": "selector_product-days",
      "label": "Select days type",
      "options": [
        {
          "value": "black days",
          "label": "Black days"
        },
        {
          "value": "cyber days",
          "label": "Cyber days"
        },
        {
          "value": "none",
          "label": "None"
        }
      ],
      "default": "none"
    },
    {
      "type": "text",
      "id": "blackdays__save",
      "label": "Add static save amount badge on collections"
    }
  ],
  "blocks": [
    {
      "type": "collection",
      "name": "Collection",
      "settings": [
        {
          "type": "collection",
          "id": "collection",
          "label": "Collection"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Heading",
          "info": "If none is set, collection title is used."
        },
        {
          "type": "richtext",
          "id": "text_box",
          "label": "Description"
        },
        {
          "type": "range",
          "id": "grid_items_count",
          "min": 2,
          "max": 50,
          "step": 1,
          "label": "Products to show",
          "default": 8
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text",
          "default": "View all products"
        }
      ]
    }
  ],
  "presets": [
    {
      "category": "Collection",
      "name": "Featured collections",
      "settings": {},
      "blocks": [
        {
          "type": "collection"
        }
      ]
    }
  ]
