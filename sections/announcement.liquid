{%- if section.settings.enable_bar -%}
  {%- unless section.settings.home_page_only and template != 'index' -%}
    <section id="section-{{ section.id }}" data-section-id="{{ section.id }}" data-section-type="announcement-bar">
      <div class="AnnouncementBar">
        <div class="AnnouncementBar__Wrapper">
          {% if section.settings.enable_bar_one %}
            <p class="AnnouncementBar__Content Heading">
              {%- if section.settings.link -%}
                <a href="{{ section.settings.link }}">{{ section.settings.content | escape }}</a>
              {%- else -%}
                {{ section.settings.content | escape }}
              {%- endif -%}
            </p>

          {% else %}            
            <ul>
              <li class="Heading">
                  {%- render 'icon' with {{section.settings.icon_selector1}} -%}
                  {{ section.settings.fadein_one }} 
              </li>
              <li class="Heading">
                {%- render 'icon' with {{section.settings.icon_selector2}} -%}
                {{ section.settings.fadein_two }} 
              </li>
              <li class="Heading">
                {%- render 'icon' with {{section.settings.icon_selector3}} -%}
                {{ section.settings.fadein_three }} 
              </li>
              <li class="Heading">
                {%- render 'icon' with {{section.settings.icon_selector4}} -%}
                {{ section.settings.fadein_four }} 
              </li>
            </ul>
          {%- endif -%} 

        </div>
      </div>
    </section>

    <style>
      #section-{{ section.id }} {
        background: {{ section.settings.background }};
        color: {{ section.settings.text_color }};
      }

      {% if section.settings.posistion_fixed %}
        #shopify-section-announcement {
          position: sticky;

          width: 100%;
          top: 0;
          left: 0;
          z-index: 5;
        }

        #shopify-section-header {
          position: sticky;
          top: 39px;
        }

        @media screen and (max-width: 960px) {
          #shopify-section-header {
            top: 35px;
          }
        }
      {% endif %}
    </style>

    <script>
      document.documentElement.style.setProperty('--announcement-bar-height', document.getElementById('shopify-section-announcement').offsetHeight + 'px');
    </script>
  {%- endunless -%}
{%- endif -%}

