{%- capture flickity_customer_testimonials -%}
{
  "prevNextButtons": {% if block.settings.arrows %}true{% else %}false{% endif %},
  "wrapAround": true,
  "pageDots": false,
  "draggable": {% if block.settings.draggable %}true{% else %}false{% endif %},
  "adaptiveHeight": true,
  "pauseAutoPlayOnHove": false,
  "cellAlign": "left",
  "autoPlay": {% if block.settings.autoplay %}{{ block.settings.cycle_speed | times: 1000 }}{% else %}false{% endif %},
  "arrowShape": {"x0": 20, "x1": 60, "y1": 40, "x2": 60, "y2": 35, "x3": 25}
}
{%- endcapture -%}

<section class="Section Section--spacingNormal" id="section-{{ section.id }}" data-section-id="{{ section.id }}">
  <div class="p_testimonials testimonials-slider-text flex_align-center flex_colum">
    {%- if block.settings.reviews_title != blank -%}
        <h3 class="Heading u-h3">{{ block.settings.reviews_title | escape }}</h3>
    {%- endif -%}
    <div class="text-slider-group">
      <div class="carousel" data-flickity='{{ flickity_customer_testimonials }}'>

        <div class="testimonials-slider-indside-text carousel-cell flex_align-center flex_colum">
            <h4 class="Heading u-h4">
                "{{ product.metafields.my_fields.review_title_1 }}"
            </h4>

            <p>{{ product.metafields.my_fields.review_text_1 }}</p>


            <div class="review-name"><span class="Heading u-h6">{{ product.metafields.my_fields.review_name_1 }}</span>
              
              <span class="testimonials-stars">
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
              </span>
            </div>
        </div>

        <div class="testimonials-slider-indside-text carousel-cell flex_align-center flex_colum">
            <h4 class="Heading u-h4">
                "{{ product.metafields.my_fields.review_title_2 }}"
            </h4>

            <p>{{ product.metafields.my_fields.review_text_2 }}</p>


            <div class="review-name"><span class="Heading u-h6">{{ product.metafields.my_fields.review_name_2 }}</span>
              
              <span class="testimonials-stars">
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
              </span>
            </div>
        </div>
          
        <div class="testimonials-slider-indside-text carousel-cell flex_align-center flex_colum">
            <h4 class="Heading u-h4">
                "{{ product.metafields.my_fields.review_title_3 }}"
            </h4>

            <p>{{ product.metafields.my_fields.review_text_3 }}</p>


            <div class="review-name"><span class="Heading u-h6">{{ product.metafields.my_fields.review_name_3 }}</span>
              
              <span class="testimonials-stars">
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
              </span>
            </div>
        </div>

        <div class="testimonials-slider-indside-text carousel-cell flex_align-center flex_colum">
            <h4 class="Heading u-h4">
                "{{ product.metafields.my_fields.review_title_4 }}"
            </h4> 

            <p>{{ product.metafields.my_fields.review_text_4 }}</p>


            <div class="review-name"><span class="Heading u-h6">{{ product.metafields.my_fields.review_name_4 }}</span>
              
              <span class="testimonials-stars">
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
                {%- render 'icon' with 'star' -%}
              </span>
            </div>
        </div>
      </div>
    </div>
</div>
</section>

<style>
  #section-{{ section.id }}{
    background-color: {{ block.settings.background-color }};
  }

  #section-{{ section.id }} .u-h3{
        font-size: {{ block.settings.heading_size }}px;
    }

    @media screen and (max-width: 640px) {

        #section-{{ section.id }} .u-h3{
            font-size: {{ block.settings.heading_size_mobile }}px;
        }
    }

</style>